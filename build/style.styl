@-moz-document url-prefix("https://www.youtube.com") {
  i=!important;
  t=transparent;

  #copyright div::after {
    white-space: pre;
    content: "\aYoutube Tweaks - Version [[VERSION]]";
  }

  ::-webkit-scrollbar {
    width: 4px i;
  }

  ::-webkit-scrollbar-button {
    display: none i;
    border-radius: 0 i;
    height: 13px i;
    background-color: #333 i;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 2px i;
    background: #555 i;
  }

  ::-webkit-scrollbar-track,
  ::-webkit-scrollbar-corner {
    background-color: #333 i;
  }

  if (videos-per-row > "3") {
    .ytd-rich-grid-renderer {
      --ytd-rich-grid-items-per-row: videos-per-row;
    }

    .ytp-inline-preview-mode .ytp-paid-content-overlay {
      display: none;
    }

    ytd-rich-item-renderer:nth-child(4):has(#video-title.ytd-rich-grid-media)[hidden] {
      display: block i;
    }

    [style="--ytd-rich-shelf-items-count: 4;"]:has(#video-title.ytd-rich-grid-media) {
      .expand-collapse-button.ytd-rich-shelf-renderer {
        display: none;
      }

      #dismissible.ytd-rich-shelf-renderer {
        border-bottom: 4px solid var(--yt-spec-10-percent-layer);
      }
    }

    [page-subtype="home"] .yt-core-image--content-mode-scale-aspect-fill {
      object-fit: fill;
    }

    .ytp-inline-preview-ui .ytp-subtitles-button,
    .ytp-inline-preview-ui .ytp-mute-button {
      display: block i;
    }

    .ytp-inline-preview-mode button.ytp-subtitles-button.ytp-button::after {
      margin: 0 8px;
    }

    ytd-rich-section-renderer {
      order: -1;
    }

    ytd-rich-shelf-renderer {
      border: none;
    }

    #rich-shelf-header.ytd-rich-shelf-renderer,
    ytd-rich-section-renderer.ytd-rich-grid-renderer + ytd-rich-section-renderer.ytd-rich-grid-renderer {
      margin-top: 0;
    }

    #home-container-media .rich-grid-media-skeleton {
      --ytd-rich-grid-items-per-row: videos-per-row;
      max-width: calc(100% / var(--ytd-rich-grid-items-per-row) - 16px);
      min-width: 0 i;
    }

    if (videos-per-row > "4") {
