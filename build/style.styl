@-moz-document domain("youtube.com") {
  i=!important;
  t=transparent;

  #copyright div::after {
    white-space: pre;
    content: "\aYoutube Tweaks - Version [[VERSION]]";
  }

  ::-webkit-scrollbar {
    width: 4px i;
  }

  ::-webkit-scrollbar-button {
    display: none i;
    border-radius: 0 i;
    height: 13px i;
    background-color: #333 i;
  }

  ::-webkit-scrollbar-thumb {
    border-radius: 2px i;
    background: #555 i;
  }

  ::-webkit-scrollbar-track,
  ::-webkit-scrollbar-corner {
    background-color: #333 i;
  }

  ytd-thumbnail[class="style-scope ytd-video-renderer"],
  ytd-playlist-thumbnail[class="style-scope ytd-playlist-renderer"] {
    max-width: 225px i;
    max-height: 132px i;
  }

  ytd-video-renderer[use-prominent-thumbs] #channel-info.ytd-video-renderer {
    padding: 5px 0;
  }

  ytd-search[center-results] ytd-two-column-search-results-renderer.ytd-search {
    padding-right: 150px;
  }

  [page-subtype="home"] {
    ytd-rich-grid-row,
    ytd-rich-grid-row #contents {
      display: contents;
    }
  }

  ytd-rich-section-renderer,
  .ghost-grid.ytd-ghost-grid-renderer {
    display: none;
  }

  [page-subtype=home] {
    #contents > ytd-rich-item-renderer:has(#content > ytd-ad-slot-renderer) {
      display: none;
    }
  }
}

